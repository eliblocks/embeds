<% provide(:title, "Sign up") %>
<br>
<div class="row">
  <div class="col-md-6 m-auto">
    <h4 class="text-center">Sign up and get 100 free minutes. No credit card!</h4><br>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group">
        <%= f.label :full_name %>
        <%= f.text_field :full_name, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, class: "form-control" %>
      </div>

      <% if request.referrer && URI(request.referrer).path == '/' %>
        <!-- <div class="form-group">
          <%= f.label :paypal_email %>
          <em>(if different from account email)</em>
          <%= f.email_field :paypal_email, class: "form-control" %>
        </div> -->
        <%= f.hidden_field :category, value: "uploader" %>
      <% end %>

      <div class="form-group">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
      </div>

      

      <%= f.submit "Sign up", class: "btn btn-primary", id: "signup", onclick: "gtag_report_conversion" %>

    <% end %>
    <br>
    <%= render "devise/shared/links" %>
  </div>
</div>

